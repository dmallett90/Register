<h3>Register for Activities</h3>
<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>
	<fieldset id="name">
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
	</fieldset>
	<fieldset id="address">
		<%= f.label :street %>
		<%= f.text_field :street %>
		<%= f.label :city %>
		<%= f.text_field :city %>
		<div id="state">
			<%= f.label :state %>
			<%= f.text_field :state %> 
		</div>
		<div id="zip">
			<%= f.label :zip %>
			<%= f.text_field :zip %>
		</div>
	</fieldset>
	<fieldset id="phone">
		<%= f.label :mobile_phone %>
		<%= f.text_field :mobile_phone %>
		<%= f.label :home_phone %>
		<%= f.text_field :home_phone %>
		<%= f.label :other_phone %>
		<%= f.text_field :other_phone %>
	</fieldset>
	<fieldset id="email">
		<%= f.label :email %>
		<%= f.text_field :email %>
		<%= f.check_box :optin %>
		<%= f.label :optin, 'I have read and understood the terms and conditions.' %>
	</fieldset>
	<div class="actions">
		<%= f.submit "Sign Up" %>
	</div>
<% end %>